    <style>
        /* order.css */

        .orders-container {
            padding-top: 50px;
            display: flex;
            flex-wrap: wrap;
        }

        .component-container {
            width: 33.33%; /* Her bir bileşen üçte birlik alan kaplasın */
            padding: 10px; /* Boşluk */
            box-sizing: border-box; /* Kenarlıklar dahil olacak şekilde kutuyu boyutlandır */
        }

        .list {
            border: 1px solid transparent; /* Kenarlık */
            padding: 10px; /* Boşluk */
            margin-bottom: 20px; /* Alt boşluk */
            background-color: rgba(0, 0, 0, 0.1); /* Hafif siyahmsı, şeffaf arka plan */
            border-radius: 10px; /* Köşeleri yuvarlat */
            transition: background-color 0.3s ease; /* Renk değişimi için geçiş efekti */
        }

        .list:hover {
            background-color: rgba(0, 0, 0, 0.2); /* Hafif siyahmsı, şeffaf arka plan (hover durumunda biraz daha koyu) */
        }

        .list img {
            width: 100%; /* Resimlerin genişliği %100 olsun, yani containera tam olarak sığsın */
            height: auto; /* Yükseklik otomatik olarak ayarlanacak, oranlar korunacak */
            display: block; /* Diğer içeriklerle çakışmaması için blok olacak */
            margin-bottom: 10px; /* Resim altına boşluk bırak */
            border-radius: 5px; /* Köşeleri yuvarlat */
